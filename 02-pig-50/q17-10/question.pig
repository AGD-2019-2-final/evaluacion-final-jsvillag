data = LOAD 'data.csv' USING PigStorage(',')
    AS (
        id: INT,
        firstname: CHARARRAY,
        lastname: CHARARRAY,
        birthday: CHARARRAY,
        color: CHARARRAY,
        quantity: INT
    );
--
-- >>> Escriba su respuesta a partir de este punto <<<
--

x = FOREACH data GENERATE firstname, color;
filtered = FILTER x BY color IN ('blue','black');
STORE filtered INTO 'output' USING PigStorage(',');